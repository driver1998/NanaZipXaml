<UserControl
    x:Class="WinFormsApp1.DetailViewWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <RichTextBlock Padding="16,16,16,16" x:Name="textBlock" IsTextSelectionEnabled="True">
            </RichTextBlock>
        </ScrollViewer>
        <Grid Grid.Row="1" Background="#37C9C9C9" BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="0,1,0,0">
            <Button Margin="16,16,16,16" HorizontalAlignment="Stretch">关闭</Button>
        </Grid>
    </Grid>
</UserControl>